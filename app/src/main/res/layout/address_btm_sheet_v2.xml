<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cancelSheet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/white_circle"
        android:padding="8dp"
        android:src="@drawable/cross_red_outline"
        app:layout_constraintBottom_toTopOf="@+id/containerData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginTop="60dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_right_left_8dp_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/divider7"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#CDCDCD"
            app:layout_constraintEnd_toEndOf="@+id/labelAddNewAddress2"
            app:layout_constraintStart_toStartOf="@+id/addressBtmSheetTitle"
            app:layout_constraintTop_toBottomOf="@+id/addressBtmSheetTitle" />

        <TextView
            android:id="@+id/labelAddNewAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@drawable/plus_circle"
            android:drawablePadding="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Add new address"
            android:textColor="@color/new_material_primary"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/addressBtmSheetTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/addressBtmSheetTitle"
            app:layout_constraintTop_toTopOf="@+id/addressBtmSheetTitle" />

        <TextView
            android:id="@+id/addressBtmSheetTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Delivery Address"
            android:textColor="@color/app_black"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/labelAddNewAddress2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>