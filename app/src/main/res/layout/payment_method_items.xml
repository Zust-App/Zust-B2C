<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp">

    <TextView
        android:id="@+id/paymentMethodItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Debit Card"
        android:textColor="@color/black_2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/paymentMethodItemRdBtn"
        app:layout_constraintEnd_toStartOf="@+id/paymentMethodItemRdBtn"
        app:layout_constraintStart_toEndOf="@+id/paymentMethodIcon"
        app:layout_constraintTop_toTopOf="@+id/paymentMethodItemRdBtn" />

    <RadioButton
        android:id="@+id/paymentMethodItemRdBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:buttonTint="@color/new_hint_color"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/paymentMethodIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>