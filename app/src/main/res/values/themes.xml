<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ZustApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="backgroundColor">@color/new_material_primary</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/new_material_primary</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="statusBarBackground">@color/new_material_primary</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/new_material_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/zust_white_text</item>
        <item name="windowSplashScreenAnimationDuration">600</item>
        <item name="backgroundColor">@color/new_material_primary</item>
        <item name="colorAccent">@color/new_material_primary</item>
        <item name="android:statusBarColor">@color/new_material_primary</item>
        <item name="postSplashScreenTheme">@style/Theme.OnBoardingCompose</item>
    </style>

    <style name="Theme.OnBoardingCompose" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/new_material_primary</item>
        <item name="android:navigationBarColor">@color/new_material_primary</item>
    </style>

    <style name="SlideFromRightActivity" parent="@android:style/Animation">
        <item name="android:windowAnimationStyle">@style/SlideFromRightAnimation</item>
    </style>

    <style name="SlideFromRightAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>
</resources>